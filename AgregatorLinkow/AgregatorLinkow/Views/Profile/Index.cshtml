@model AgregatorLinkow.Helpers.LinkList<AgregatorLinkow.LinkListItem>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">@TempData["Message"]</div>
<div class="text-right">
    <a type="submit" class="btn btn-primary" asp-area="" asp-controller="Profile" asp-action="AddLink">Add link</a>
</div>
<table class="table">
    <tbody>
        @foreach (var listItem in Model)
        {
            <tr>
                <td style="width:10%">
                    <div class="counter">
                        <b>@Html.DisplayFor(item => listItem.PlusesNumber)</b>
                    </div>

                </td>
                <td style="width:90%">
                    <div class="tittle">
                        <b>@Html.DisplayFor(item => listItem.Title)</b>
                    </div>
                    <div class="link">
                        @Html.DisplayFor(item => listItem.Date) <a href="@listItem.Url">(@Html.DisplayFor(item => listItem.Url))</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
